@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="row">
    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-primary">Log In with GitHub</a>
    }
    else
    {
        <div class="badge">
            Welcome @Model.GitHubName 
        </div>
    }
</div>